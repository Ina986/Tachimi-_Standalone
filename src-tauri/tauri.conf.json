{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tachimi",
  "version": "1.2.2",
  "identifier": "com.tachimi.app",
  "build": {
    "frontendDist": "../src"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Ina986/Tachimi-_Standalone/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM0RjREMDM1NjhGMzU0MEMKUldRTVZQTm9OZEQwTk9kTlJQMmdVcW1pdzJXRjlnTW1lNDkydlVmckNQTUpUUEZ0MndHTlhQcjcK"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Tachimi",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://github.com https://api.github.com https://*.githubusercontent.com; img-src 'self' asset: http://asset.localhost https://asset.localhost blob: data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": ["$TEMP/**", "$LOCALAPPDATA/**", "$DESKTOP/**", "$DOCUMENT/**", "$HOME/**", "$DOWNLOAD/**", "G:/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "icons/icon.ico": "tachimi.ico"
    },
    "windows": {
      "nsis": {
        "languages": ["Japanese"],
        "displayLanguageSelector": false,
        "installerHooks": "windows/hooks.nsh"
      }
    }
  }
}
